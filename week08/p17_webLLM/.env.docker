# Docker环境配置文件
# 复制此文件为.env并填入实际值

# 服务器配置
HOST=0.0.0.0
PORT=8000
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860

# LLM配置
LLM_MODEL=qwen-turbo
DASHSCOPE_API_KEY=your_api_key_here

# API限制配置
MAX_INPUT_LENGTH=500
MIN_INPUT_LENGTH=1

# 重试配置
RETRY_MULTIPLIER=1
RETRY_MIN_WAIT=2
RETRY_MAX_WAIT=10
RETRY_MAX_ATTEMPTS=3

# 日志配置
LOG_LEVEL=INFO

# 数据库配置（PostgreSQL）
DATABASE_NAME=webllm_db
DATABASE_USER=webllm_user
DATABASE_PASSWORD=webllm_password
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_URL=postgresql://webllm_user:webllm_password@postgres:5432/webllm_db

# Redis配置
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0